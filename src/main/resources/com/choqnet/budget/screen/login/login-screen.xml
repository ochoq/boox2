<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://caption">

    <actions>
        <action id="submit"
                caption="msg://loginButton"
                icon="CHECK"
                shortcut="ENTER"/>
    </actions>

    <layout stylename="jmix-login-main-layout">
        <vbox id="loginWrapper" height="100%" width="100%">
            <vbox id="loginMainBox"
                  align="MIDDLE_CENTER"
                  margin="true,true,false,true"
                  spacing="true"
                  stylename="jmix-login-panel"
                  width="AUTO">
                <label id="welcomeLabel"
                       align="MIDDLE_CENTER"
                       stylename="jmix-login-caption"
                       value="msg://welcomeLabel"/>

                <vbox id="loginForm"
                      spacing="true"
                      stylename="jmix-login-form">
                    <cssLayout id="loginCredentials"
                               stylename="jmix-login-credentials">
                        <textField id="usernameField"
                                   htmlName="usernameField"
                                   inputPrompt="msg://usernamePlaceholder"
                                   stylename="jmix-login-username"/>
                        <passwordField id="passwordField"
                                       autocomplete="true"
                                       htmlName="passwordField"
                                       inputPrompt="msg://passwordPlaceholder"
                                       stylename="jmix-login-password"/>
                    </cssLayout>
                    <hbox id="rememberLocalesBox"
                          stylename="jmix-login-remember-locales">
                        <checkBox id="rememberMeCheckBox"
                                  caption="msg://loginScreen.rememberMe"
                                  stylename="jmix-login-remember-me"/>
                        <comboBox id="localesField"
                                  nullOptionVisible="false"
                                  stylename="jmix-login-locale"
                                  textInputAllowed="false"/>
                    </hbox>

                    <button id="loginButton"
                            align="MIDDLE_CENTER"
                            action="submit"
                            stylename="jmix-login-submit-button"/>
                    <label/>
                    <linkButton caption="Not registered already? Request access"
                                id="lnkRegister"
                                stylename="visible"
                                align="BOTTOM_RIGHT"
                                icon="ARROW_CIRCLE_RIGHT"/>
                </vbox>
            </vbox>
            <vbox id="registerForm"
                  align="MIDDLE_CENTER"
                  visible="false"
                  margin="true"
                  spacing="true"
                  width="AUTO">
                <label stylename="h1" value="Send a Registration Request"/>
                <textField id="txtFirstName" caption="First Name">
                    <validators>
                        <notEmpty/>
                    </validators>
                </textField>
                <textField id="txtLastName" caption="Last Name">
                    <validators>
                        <notEmpty/>
                    </validators>
                </textField>
                <textField id="txtEmail" caption="Valid Email Address">
                    <validators>
                        <email/>
                        <notEmpty/>
                    </validators>
                </textField>
                <radioButtonGroup id="rdgRole" caption="What is your role?"/>
                <textArea id="txtComment" width="100%" caption="You want to add a comment?"/>
            <hbox spacing="true">
                <button id="btnCancel" caption="Cancel" align="BOTTOM_LEFT"/>
                <button id="btnRegister" caption="Register" align="BOTTOM_RIGHT"/>
            </hbox>
            </vbox>
            <vbox id="congratsPanel"
                  align="MIDDLE_CENTER"
                  visible="false"
                  margin="true"
                  spacing="true"
                  width="AUTO">
                <textArea
                    id="txtCongrats"
                    width="100%" align="MIDDLE_CENTER"
                    editable="false"/>
            </vbox>
        </vbox>
    </layout>
</window>