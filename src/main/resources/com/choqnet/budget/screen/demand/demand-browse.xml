<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://demandBrowse.caption"
        focusComponent="demandsTable">
    <data readOnly="true">
        <collection id="demandsDc"
                    class="com.choqnet.budget.entity.Demand">
            <fetchPlan extends="_base"/>
            <loader id="demandsDl">
                <query>
                    <![CDATA[select e from Demand e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="demandsTable" spacing="true">
        <filter id="filter"
                dataLoader="demandsDl">
            <properties include=".*"/>
        </filter>
        <dataGrid id="demandsTable"
                  width="100%"
                  dataContainer="demandsDc">
            <actions>
            </actions>
            <columns>
                <column property="mdY" id="mdY"/>
                <column property="mdQ1" id="mdQ1"/>
                <column property="mdQ2" id="mdQ2"/>
                <column property="mdQ3" id="mdQ3"/>
                <column property="mdQ4" id="mdQ4"/>
                <column property="euroAmount" id="euroAmount"/>
                <column property="unicity" id="unicity"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </dataGrid>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
