<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://uploadTeams.caption">
    <layout spacing="true" expand="spacer" width="500px" height="650px">
        <label stylename="h1" value="Teams upload from Excel list"/>
        <vbox spacing="true" width="100%"  height="250px" align="TOP_CENTER" expand="dropArea">
            <fileStorageUpload id="upload" fileStoragePutMode="MANUAL" dropZone="dropArea" caption="Select Excel file..." />
            <hbox id="dropArea" stylename="grayArea" width="100%">
                <label align="MIDDLE_CENTER" value="... or drop it here"/>
            </hbox>
        </vbox>
        <button id="btnProcess" caption="Process File"/>
        <textArea id="txtResult" width="100%" height="200px" align="MIDDLE_CENTER" caption="Results" editable="false"/>
        <label id="spacer"/>
        <vbox spacing="false" width="100%" align="BOTTOM_CENTER">
            <button id="btnClose" caption="Close" align="BOTTOM_RIGHT"/>
        </vbox>
    </layout>
</window>