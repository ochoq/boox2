<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://detailSystem.caption">
    <data>
        <collection id="detailsDc" class="com.choqnet.budget.entity.Detail">
            <fetchPlan extends="_base">
                <property name="budget" fetchPlan="_base"/>
                <property name="iprb" fetchPlan="_base"/>
                <property name="progress" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="detailsDl">
                <query>
                    <![CDATA[select e from Detail e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout spacing="true" expand="detailsTable">
        <filter id="filter" columnsCount="3" dataLoader="detailsDl">
            <properties include=".*"/>
        </filter>
        <dataGrid id="detailsTable" width="100%" dataContainer="detailsDc">
            <actions>
                <action id="excelExport" type="excelExport"/>
                <action id="remove" type="remove"/>
            </actions>
            <buttonsPanel alwaysVisible="true">
                <button id="detailsTableExcelExportBtn" action="detailsTable.excelExport"/>
                <button id="detailsTableRemoveBtn" action="detailsTable.remove"/>
            </buttonsPanel>
            <columns>
                <column id="team" property="team"/>
                <column id="topic" property="topic"/>
                <column id="roadmap" property="roadmap"/>
                <column id="detail" property="detail"/>
                <column id="tShirt" property="tShirt"/>
                <column id="budgetCost" property="budgetCost"/>
                <column id="budgetCostQ1" property="budgetCostQ1"/>
                <column id="budgetCostQ2" property="budgetCostQ2"/>
                <column id="budgetCostQ3" property="budgetCostQ3"/>
                <column id="budgetCostQ4" property="budgetCostQ4"/>
                <column id="mdY" property="mdY"/>
                <column id="mdQ1" property="mdQ1"/>
                <column id="mdQ2" property="mdQ2"/>
                <column id="mdQ3" property="mdQ3"/>
                <column id="mdQ4" property="mdQ4"/>
                <column id="mdNY" property="mdNY"/>
                <column id="category" property="category"/>
                <column id="priority" property="priority"/>
                <column id="jira" property="jira"/>
                <column id="simpleDomain" property="simpleDomain"/>
                <column id="simplePlatform" property="simplePlatform"/>
                <column id="included" property="included"/>
                <column id="type" property="type"/>
                <column id="budget" property="budget"/>
                <column id="iprb" property="iprb"/>
                <column id="progress" property="progress"/>
                <column id="remaining" property="remaining"/>
            </columns>
        </dataGrid>
    </layout>
</window>