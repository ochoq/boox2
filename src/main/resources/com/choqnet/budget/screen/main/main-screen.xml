<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://application.caption">

    <layout>
        <cssLayout id="horizontalWrap"
                   stylename="jmix-drawer-layout">
            <drawer id="drawer" expandOnHover="true">
                <cssLayout id="appTitleBox"
                           stylename="jmix-drawer-header"
                           width="100%">
                    <image id="logoImage"
                           stylename="app-icon"
                           scaleMode="SCALE_DOWN">
                        <resource>
<!--                            <theme path="branding/app-icon-menu.svg"/>-->
                            <theme path="boox01.svg"/>
                        </resource>
                    </image>
                    <label id="appTitleLabel"
                           stylename="app-title"
                           value="msg://application.logoLabel"/>
                </cssLayout>
                <sideMenu id="sideMenu"
                          width="100%"
                          stylename="jmix-drawer-content"/>
                <timeZoneIndicator id="timeZoneIndicator"
                                   align="MIDDLE_CENTER"/>
                <cssLayout id="controlBox"
                           stylename="jmix-drawer-footer"
                           width="100%">
                    <button id="collapseDrawerButton"
                            icon="CHEVRON_LEFT"
                            stylename="jmix-drawer-collapse-button"
                            description="msg://sideMenuCollapse"/>
                    <userIndicator id="userIndicator"
                                   align="MIDDLE_CENTER"/>
                    <logoutButton id="logoutButton"
                                  icon="SIGN_OUT"
                                  description="msg://logoutBtnDescription"/>
                </cssLayout>
            </drawer>
            <workArea id="workArea"
                      stylename="jmix-workarea"
                      height="100%">
                <initialLayout spacing="true" margin="true" expand="box" >
                    <vbox spacing="true" width="100%" height="100%" id="box" expand="spacer">
                        <vbox height="100px" spacing="true">
                            <label stylename="h1" value="Acceptance Capacity Planning &amp; Budget" align="MIDDLE_CENTER"/>
                        </vbox>
                        <richTextArea width="900px" height="500px" align="MIDDLE_CENTER" id="screen" editable="false"/>
                        <label id="spacer"/>
                    </vbox>

                    <hbox spacing="true" width="100%" height="100px">
                        <link caption="Boox Overview"
                              align="MIDDLE_CENTER"
                              stylename="red_button_like"
                              icon="BOOK"
                              url="https://choqnet.notion.site/General-Concepts-how-to-54275d8a0e7543c1b05a843c9fe893c8"/>

                       <link caption="Online Documentation"
                              align="MIDDLE_CENTER"
                                stylename="red_button_like"
                              icon="QUESTION_CIRCLE"
                              url="https://www.notion.so/choqnet/User-Documentation-14361ceea9d643caa421a9655bbf2b60"/>
                    </hbox>

                </initialLayout>
            </workArea>
        </cssLayout>

    </layout>
</window>